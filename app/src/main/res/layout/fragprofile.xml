<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/nightBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/background"
        android:id="@+id/backgroundProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/MyAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile_placeholder" />

        <TextView
            android:id="@+id/MyEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/MyAvatar"
            android:text="j.d.dejong@students.uu.nl" />

        <TextView
            android:id="@+id/MyProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/MyEmail"
            android:layout_below="@id/MyEmail"
            android:layout_marginTop="8dp"
            android:text="jackckck" />
    </RelativeLayout>
</ScrollView>