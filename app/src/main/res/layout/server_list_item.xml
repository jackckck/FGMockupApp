<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/fivedp"
    android:paddingEnd="@dimen/fivedp"
    android:paddingStart="@dimen/fivedp"
    android:paddingTop="@dimen/fivedp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/serverIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_profile_placeholder" />

    <TextView
        android:id="@+id/serverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/serverIcon"
        android:layout_marginTop="@dimen/fivedp"
        android:layout_toEndOf="@id/serverIcon"
        android:text="Server name"
        android:textSize="@dimen/server_font_size" />

    <TextView
        android:id="@+id/serverIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/serverIcon"
        android:layout_marginBottom="@dimen/fivedp"
        android:layout_toEndOf="@id/serverIcon"
        android:text="192.168.2.10"
        android:textSize="@dimen/server_font_size" />

    <TextView
        android:id="@+id/playerCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/fivedp"
        android:text="8/10"
        android:textSize="@dimen/server_font_size" />

    <TextView
        android:id="@+id/gameIdentifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/serverIcon"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/fivedp"
        android:text="CoD 2"
        android:layout_marginRight="@dimen/fivedp"
        android:textSize="@dimen/server_font_size"/>

</RelativeLayout>