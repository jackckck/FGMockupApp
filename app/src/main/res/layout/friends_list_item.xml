<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:paddingBottom="@dimen/fivedp"
    android:paddingEnd="@dimen/fivedp"
    android:paddingStart="@dimen/fivedp"
    android:paddingTop="@dimen/fivedp">

    <ImageView
        android:id="@+id/friendProfilePic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_profile_placeholder" />

    <TextView
        android:id="@+id/friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/friendProfilePic"
        android:layout_marginTop="@dimen/fivedp"
        android:layout_toEndOf="@id/friendProfilePic"
        android:text="Friend name"
        android:textSize="@dimen/friend_font_size" />

    <TextView
        android:id="@+id/friendEMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/friendName"
        android:layout_marginTop="@dimen/fivedp"
        android:layout_toEndOf="@id/friendProfilePic"
        android:text="j.d.dejong@students.uu.nl"
        android:textSize="@dimen/server_font_size" />

    <TextView
        android:id="@+id/friendStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Offline" />

</RelativeLayout>