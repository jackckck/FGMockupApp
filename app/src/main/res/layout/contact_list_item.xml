<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/contactImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/eightdp"
        android:layout_marginTop="@dimen/fivedp"
        android:paddingBottom="@dimen/fivedp"
        android:paddingEnd="@dimen/fivedp"
        android:src="@mipmap/ic_fg_contact_icon" />

    <TextView
        android:id="@+id/friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/contactImageView"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/contactImageView"
        android:textSize="@dimen/friend_font_size" />

    <TextView
        android:id="@+id/blockedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/friendName"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:textSize="@dimen/friend_font_size" />

    <TextView
        android:id="@+id/contactEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/friendName"
        android:layout_below="@id/friendName"
        android:layout_marginTop="@dimen/fivedp"
        android:textSize="@dimen/server_font_size" />

    <TextView
        android:id="@+id/contactAccountStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/fourdp"
        android:layout_marginTop="@dimen/fourdp" />
</RelativeLayout>