<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/chat_bubble_left_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/fivedp"
        android:layout_marginTop="@dimen/chat_vertical_spacing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/themMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/fourdp"
            android:paddingStart="@dimen/fourdp"
            android:textSize="@dimen/chat_font_size" />

        <TextView
            android:id="@+id/themTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/chat_time_stamp_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_bubble_right_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/fivedp"
        android:layout_marginTop="@dimen/chat_vertical_spacing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/fourdp"
            android:paddingStart="@dimen/fourdp"
            android:textSize="@dimen/chat_font_size" />

        <TextView
            android:id="@+id/usTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="@dimen/chat_time_stamp_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/chatDateNotifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/fourdp" />

</RelativeLayout>